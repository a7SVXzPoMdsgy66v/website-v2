---
import { Image } from '@astrojs/image/components'

import { DarkLogo, LightLogo } from './images'
---

<Image id="TheOverflowLogo__dark" src={DarkLogo} alt="Overflow logo" />
<Image id="TheOverflowLogo__light" src={LightLogo} alt="Overflow logo" />

<style>
  #TheOverflowLogo__dark {
    display: none;
  }

  #TheOverflowLogo__light {
    display: block;
  }

  :global(.dark) #TheOverflowLogo__dark {
    display: block;
  }

  :global(.dark) #TheOverflowLogo__light {
    display: none;
  }
</style>
