---
export interface Props {
  description: string
  url: string
}

const { description, url } = Astro.props
---

<div class="flex justify-between align-center flex-col gap-3 lg:flex-row bg-warning p-3 rounded-lg">
  <p class="font-bold text-lg text-warning-content">
    {description}
  </p>
  <a href={url} class="btn btn-sm">More Info</a>
</div>
